using namespace std;
int matrix(m,n);
int main()
{

  int m,n,i,j;
  
  cout<<"Enter the number of rows:\n";
  cin>> m;
  cout<<"Enter the number of columns:\n";
  cin>> n;
  int myarray [m][n];//defining two dimensional array
  cout<<"Enter "<<m*n<<" elements of matrix:\n";
 int matrix (m,n);
 
    return 0;
}
int matrix(m,n)
  {
    for( i=0;i<m;i++)
    {
      for(j=0;j<n;j++)
	{
	  cin>>myarray[i][j];
	 
	}
    }
 
    cout<<"The output matrix is:\n";
    for( i=0;i<m;i++)
    {
      for(j=0;j<n;j++)
	{
	  cout<<myarray[i][j]<<"\t"; 
	 
	}
      cout<<endl;
    }
}

